extends ../layouts/app-sample.pug
include ../mixins/app/samples/footers.pug

block sample
  section.app-sample-section
    header Empty (no container)

    footer.bsk-footer.bsk-footer-default

  section.app-sample-section
    header With basic content (no container)

    footer.bsk-footer.bsk-footer-default
      | Footer content

  section.app-sample-section
    header With basic content (fluid container)

    +footer--default
      | Footer content

  section.app-sample-section
    header With complex content (fluid container)

    +footer--default(class='app-spacing-bottom')
      div.bsk-row
        div.bsk-col-12-md-4
          h3 Footer section 1 (1 column span)
          ul.bsk-list-unstyled
            li: a(href='#') Link 1
