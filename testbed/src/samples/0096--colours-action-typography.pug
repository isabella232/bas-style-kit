//-
  sample:
    title: Colours - typography
  collections:
    - core--colours
  ---

extends ../layouts/app-sample.pug
include ../mixins/app/samples/colours.pug
include ../mixins/app/samples/alerts.pug

block sample
  section.app-sample-section
    div.bsk-row
      div.bsk-col-12-md-2
        +colour--swatch('Page text', '$page-text', '#333333')(class='app-colour-bsk-colour-std-grey-darker')
      div.bsk-col-12-md-2
        +colour--swatch('Link', '$link-color', '#2B8CC4')(class='app-colour-bsk-colour-std-sky-blue-base')
